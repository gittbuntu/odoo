        # form view
        <record id="real_estate_property_type_form_view" model="ir.ui.view">
            <field name="name">real.estate.property.type.view.form</field>
            <field name="model">real.estate.property.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box">
                            <button name="action_state_property_type_ids" type="object" class="oe_stat_button"
                                    icon="fa-list">
                                <field name="property_count" widget="line_count"/>
                            </button>
                            <button name="action_state_real_estate_property_offer" type="object"
                                    class="oe_stat_button"
                                    icon="fa-list">
                                <field name="offer_count" widget="line_count"/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name"/>

                            </group>
                            <group>
                            </group>
                        </group>
                        <notebook>
                            <page string="Properties">
                                <field name="property_type_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="expected_price"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        # tree view
        <record id="real_estate_property_type_tree_view" model="ir.ui.view">
            <field name="name">real.estate.property.type.view.tree</field>
            <field name="model">real.estate.property.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="sequence" widget="handle"/>
                    <field name="id"/>
                    <field name="name" string="Title"/>
                </tree>
            </field>
        </record>

        # action
        <record id="test_record_property_type" model="ir.actions.act_window">
            <field name="name">Test Property Type</field>
            <field name="res_model">real.estate.property.type</field>
            <field name="view_mode">tree,form</field>
        </record>

        #menu
        <menuitem id="menu_property_type"
                  name="Property Type"
                  action="test_record_property_type"
                  parent="second_level"
                  sequence="0"/>
    </data>
</odoo>
