<odoo>
    <data>

        # form view
        <record id="real_estate_property_offer_form_view" model="ir.ui.view">
            <field name="name">real.estate.property.offer.view.form</field>
            <field name="model">real.estate.property.offer</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="price"/>

                            </group>
                            <group>
                                <field name="validity"/>
                                <field name="date_deadline"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        # tree view
        <record id="real_estate_property_offer_tree_view" model="ir.ui.view">
            <field name="name">real.estate.property.offer.view.tree</field>
            <field name="model">real.estate.property.offer</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="partner_id"/>
                    <field name="price"/>
                    <field name="type_id"/>
                    <field name="validity"/>
                    <field name="date_deadline"/>
                    <button type="object" name="action_for_accept" class="oe_highlight" icon="fa-check-circle"/>
                    <button type="object" name="action_for_refuse" class="oe_highlight" icon="fa-close"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>


    </data>
</odoo>
