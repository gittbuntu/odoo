<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="my_first_model_view_form" model="ir.ui.view">
        <field name="name">my.first.model.view.form</field>
        <field name="model">my.first.app</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    # action
    <record id="action_my_first_app" model="ir.actions.act_window">
        <field name="name">My First Action</field>
        <field name="res_model">my.first.app</field>
        <field name="view_mode">form</field>
        <!-- <field name="context">{'search_default_filter_state_accepted':True}</field> -->
    </record>

    #menu
    <menuitem
        id="my_first_app_menu_root" name="My First App">
        <menuitem
            name="First Submenu"
            id="my_first_app_menu_submenu"
            action= "action_my_first_app"
            sequence="0"/>
        <!-- parent="my_first_app_menu_root" -->
    </menuitem>
</odoo>