<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- action for female patient menu -->
        <record id="action_hospital_female_patient" model="ir.actions.act_window">
            <field name="name">Female Patient</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hospital.patient</field>
            <field name="view_mode">tree,form</field>
            <!-- default_field_name keyword is used to get any default value in that field -->
            <!-- we can also set multiple default values like {'default_gender':'female', 'default_age':'6'} -->
            <field name="context">{'default_gender':'female'}</field>
            <!-- we can also provide multiple domain like [('gender', '=', 'female'), ('age', '&lt;=', 5)] -->
            <!-- we can also provide multiple domain like ['|', "this is work like or operator" ('gender', '=', 'female'), ('age', '&lt;=', 5)] -->
            <field name="domain">[('gender', '=', 'female')]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                Create a new Female Patient!
            </p>
            </field>
        </record>
        <!-- female patient menu -->
        <menuitem id="menu_female_patient"
              name="Female Patient"
              action="action_hospital_female_patient"
              parent="menu_patient_master"
              sequence="0"/>
    </data>
</odoo>